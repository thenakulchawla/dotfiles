# Color output
zstyle ':prezto:*:*' color 'yes'  # (auto set to 'no' on dumb terminals).

# Set the Prezto modules to load (browse modules).
# The order matters.
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'history-substring-search' \
  'directory' \
  'spectrum' \
  'utility' \
  'archive' \
  'completion' \
  'prompt' \
  'git' \
  'python' \
  'pip' \
  'repo' \
  'rooter' \
  'rsync' \
  'command-editor' \
  'aliases' \
  'autorename'

# Editor
zstyle ':prezto:module:editor' key-bindings 'emacs'
zstyle ':prezto:module:editor' dot-expansion 'yes'  # Auto convert .... to ../..

# Prompt
zstyle ':prezto:module:prompt' theme 'steeef'

# Python
zstyle ':prezto:module:python:info:virtualenv' format '%v'  # %v - virtualenv name.
